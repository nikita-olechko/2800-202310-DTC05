<%
blankOption = {
    class: 'performance',
    name: 'Blank',
    parts: {
        cpu: null,
        gpu: null,
        ram: null,
        motherboard: null,
        cpuCooler: null,
        storage: null,
        case: null,
        powerSupply: null
    }
}
blankBuild = JSON.stringify(blankOption);
%>



<%- include('partials/navbar') %>

<div class="container">
    <h1>Blank Configurator</h1>
    <p>Build your own PC from scratch</p>
    <div id="blankConfigurator" class="rounded-3">
        <form action="/configurator" method="post">
            <input type="hidden" name="build" value='<%=blankBuild%>'>
            <input type="submit" value="Blank Configurator" class="form-control btn-primary">
        </form>
    </div>
</div>
<br>
<div class="container">
    <h1>Prebuilt Options</h1>
    <p>Select your desired category for a computer</p>
    <div id="prebuiltCategories" class="rounded-3">
        <% forms.forEach(function(form){ %>
            <%- include('partials/prebuiltForms', {
                route: form.route,
                description: form.description,
                formId: form.formId
                }) %>
        <% }) %>
    </div>
</div>

<%- include("partials/iconbar") %>
